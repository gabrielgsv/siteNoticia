@model SiteNoticia.Models.Noticia

@{
    ViewData["Title"] = "Editar Noticia";
}

<h2>Editar Notícia</h2>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fonte" class="control-label"></label>
                <input asp-for="Fonte" class="form-control" />
                <span asp-validation-for="Fonte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria">
                    <select asp-for="Categoria" class="select-style" size="4">
                        <option value="BancoDeDados">Banco de Dados</option>
                        <option value="FrontEnd">FrontEnd</option>
                        <option value="BackEnd">BackEnd</option>
                        <option value="Geral">Notícias Gerais</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
                <label asp-for="Texto" class="control-label"></label>
                <textarea rows="20" asp-for="Texto" class="form-control" id="my-textarea"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group btn_sucess">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </form>
</div>

