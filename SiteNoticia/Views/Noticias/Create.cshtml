@model SiteNoticia.Models.Noticia

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Noticia</h4>
<hr />
<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fonte" class="control-label"></label>
                <input asp-for="Fonte" class="form-control" />
                <span asp-validation-for="Fonte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor"></label>
                <input asp-for="Autor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Imagem"></label>
                <input type="file" id="files" asp-for="Imagem" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <nl2br><textarea rows="20" asp-for="Texto" class="form-control" id="my-textarea"></textarea></nl2br>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group btn_sucess">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>

